blueprint:
  name: TUYA – Détection personnalisée V3
  description: >
    Déclenche sur changements d’état d’event.* Tuya. Filtrage optionnel par cmd,
    snapshot + notification Android avec ouverture live via entityId:camera.xxx (sans Lovelace).
    Envoi via un groupe notify (ex: notify.all). Cooldown inclus.
  domain: automation

  input:
    event_entities:
      name: Entités d'événements Tuya (event.*)
      selector:
        entity:
          domain: event
          multiple: true

    camera_entities:
      name: Caméras associées (camera.*)
      description: >
        Correspondance automatique par sous-chaîne :
        si l’object_id de la caméra (après "camera.") est contenu dans l’object_id de l’événement (après "event."),
        elle est sélectionnée. Sinon fallback sur la première caméra de la liste.
      selector:
        entity:
          domain: camera
          multiple: true

    event_types:
      name: Type(s) d'événement à détecter (cmd Tuya)
      description: "CSV ex: ipc_bang, ipc_human, ipc_motion. Vide = tout."
      default: ""
      selector:
        text:

    notify_service:
      name: Service Notify (groupe)
      description: >
        Service notify à appeler, ex: notify.all (recommandé), ou notify.mobile_app_sm_s928b.
      default: notify.all
      selector:
        text:

    notif_title:
      name: Titre
      default: "Alerte caméra"
      selector:
        text:

    notif_message:
      name: Message
      description: >
        Variables disponibles :
          - {{ detected_cmd }}
          - {{ detected_cmd_readable }}
          - {{ trigger_entity }}
          - {{ trigger_entity_name }}
          - {{ camera_entity }}
          - {{ camera_entity_name }}
      default: "Événement de {{ detected_cmd_readable }} — {{ camera_entity_name or trigger_entity_name }}"
      selector:
        text:

    open_live_on_tap:
      name: Ouvrir le direct au tap (Android)
      default: true
      selector:
        boolean:

    show_live_button:
      name: Afficher le bouton "Voir la vidéo"
      default: true
      selector:
        boolean:

    cooldown_seconds:
      name: Cooldown anti-spam (secondes)
      default: 5
      selector:
        number:
          min: 0
          max: 3600
          unit_of_measurement: s
          mode: slider

    snapshot_dir:
      name: Dossier de snapshots
      description: >
        /media/... est servi sous /media/local/... dans la notification.
        Assure-toi que le dossier existe.
      default: "/media/camera/snapshot"
      selector:
        text:

mode: parallel
max: 10

trigger:
  # Déclenchement sur changement de state
  - platform: state
    entity_id: !input event_entities
  # + déclenchement sur changement de l’attribut message (robustesse)
  - platform: state
    entity_id: !input event_entities
    attribute: message

variables:
  trigger_entity: "{{ trigger.entity_id }}"

  trigger_entity_name: >
      {% set n = state_attr(trigger_entity, 'friendly_name') if trigger_entity else none %}
      {{ n if n else trigger_entity }}

  cameras: !input camera_entities
  wanted_csv: !input event_types
  notify_service: !input notify_service

  # JSON Tuya dans l'attribut 'message'
  msg_raw: "{{ state_attr(trigger_entity, 'message') | default('{}') }}"
  msg_json: >
    {% set s = msg_raw | string %}
    {% if s.startswith('{') and s.endswith('}') %}
      {{ s | from_json }}
    {% else %}
      {{ dict() }}
    {% endif %}

  detected_cmd: >
    {{ msg_json.get('cmd')
       or state_attr(trigger_entity, 'cmd')
       or state_attr(trigger_entity, 'type')
       or state_attr(trigger_entity, 'event_type')
       or 'unknown' }}

  # Cmd lisible
  detected_cmd_readable: >
    {% set m = {
      'ipc_bang': 'détection sonore',
      'ipc_human': 'détection humaine',
      'ipc_motion': 'détection de mouvement'
    } %}
    {{ m.get(detected_cmd, detected_cmd) }}

  # Filtre cmd (CSV)
  wanted_list: >
    {% set csv = wanted_csv | default('') | trim %}
    {% if csv == '' %}
      {{ [] }}
    {% else %}
      {{ csv.split(',') | map('trim') | reject('equalto','') | list }}
    {% endif %}
  match_evt: "{{ (wanted_list | length == 0) or (detected_cmd in wanted_list) }}"

  # Résolution caméra (sous-chaîne object_id)
  camera_entity: >
    {% set evt_obj = trigger_entity.split('.')[-1] %}
    {% set found = namespace(val='') %}
    {% for cam in cameras %}
      {% set cam_obj = cam.split('.')[-1] %}
      {% if cam_obj in evt_obj %}
        {% set found.val = cam %}
      {% endif %}
    {% endfor %}
    {{ found.val if found.val else (cameras[0] if cameras|length>0 else '') }}

  camera_entity_name: >
    {% set n = state_attr(camera_entity, 'friendly_name') if camera_entity else none %}
    {{ n if n else camera_entity }}

  # Snapshot
  ts: "{{ now().strftime('%Y%m%d_%H%M%S') }}"
  snapshot_dir: !input snapshot_dir
  snapshot_path: >
    {{ snapshot_dir ~ '/'
       ~ (camera_entity|replace('.','_') if camera_entity else 'event')
       ~ '_' ~ ts ~ '.jpg' }}
  snapshot_url: "{{ snapshot_path | replace('/media/', '/media/local/') }}"

  # Cooldown (robuste)
  cooldown: !input cooldown_seconds
  this_entity: >
    {% if this is defined and this.entity_id is defined %}
      {{ this.entity_id }}
    {% else %}
      {{ '' }}
    {% endif %}
  last_triggered: >
    {% if this_entity|length > 0 %}
      {{ state_attr(this_entity, 'last_triggered') }}
    {% else %}
      {{ none }}
    {% endif %}
  allow_notify: >
    {% if cooldown | int == 0 %}
      true
    {% elif last_triggered is none %}
      true
    {% else %}
      {{ (as_timestamp(now()) - as_timestamp(last_triggered)) >= (cooldown | int) }}
    {% endif %}

  open_live_on_tap: !input open_live_on_tap
  show_live_button: !input show_live_button
  live_target: "{{ 'entityId:' ~ camera_entity if camera_entity else '' }}"

condition:
  - condition: template
    value_template: "{{ match_evt }}"
  - condition: template
    value_template: "{{ allow_notify }}"
  - condition: template
    value_template: "{{ camera_entity != '' }}"
  - condition: template
    value_template: "{{ notify_service | trim != '' }}"

action:
  - service: camera.snapshot
    data:
      entity_id: "{{ camera_entity }}"
      filename: "{{ snapshot_path }}"

  - delay: "00:00:01"

  - choose:
      - conditions: "{{ show_live_button and open_live_on_tap }}"
        sequence:
          - service: "{{ notify_service }}"
            data:
              title: !input notif_title
              message: !input notif_message
              data:
                image: "{{ snapshot_url }}"
                attachment:
                  url: "{{ snapshot_url }}"
                  content-type: jpeg
                  hide-thumbnail: false
                clickAction: "{{ live_target }}"
                actions:
                  - action: URI
                    title: "Voir la vidéo"
                    uri: "{{ live_target }}"

      - conditions: "{{ (not show_live_button) and open_live_on_tap }}"
        sequence:
          - service: "{{ notify_service }}"
            data:
              title: !input notif_title
              message: !input notif_message
              data:
                image: "{{ snapshot_url }}"
                attachment:
                  url: "{{ snapshot_url }}"
                  content-type: jpeg
                  hide-thumbnail: false
                clickAction: "{{ live_target }}"

      - conditions: "{{ show_live_button and (not open_live_on_tap) }}"
        sequence:
          - service: "{{ notify_service }}"
            data:
              title: !input notif_title
              message: !input notif_message
              data:
                image: "{{ snapshot_url }}"
                attachment:
                  url: "{{ snapshot_url }}"
                  content-type: jpeg
                  hide-thumbnail: false
                actions:
                  - action: URI
                    title: "Voir la vidéo"
                    uri: "{{ live_target }}"
    default:
      - service: "{{ notify_service }}"
        data:
          title: !input notif_title
          message: !input notif_message
          data:
            image: "{{ snapshot_url }}"
            attachment:
              url: "{{ snapshot_url }}"
              content-type: jpeg
              hide-thumbnail: false
