blueprint:
  name: TUYA – Détection personnalisée (snapshot + Live direct Android) – Stable
  description: >
    Déclenche sur changements d’état d’event.* Tuya. Filtrage optionnel par cmd,
    snapshot + notification Android avec ouverture directe du live via entityId:camera.xxx
    (tap notification + bouton). Cooldown inclus.
  domain: automation

  input:
    event_entities:
      name: Entités d'événements Tuya (event.*)
      selector:
        entity:
          domain: event
          multiple: true

    camera_entities:
      name: Caméras associées (camera.*)
      description: >
        Correspondance automatique par sous-chaîne :
        event.xxx contenant camera.yyy (object_id) -> camera.yyy.
        Sinon fallback sur la première caméra de la liste.
      selector:
        entity:
          domain: camera
          multiple: true

    event_types:
      name: Type(s) d'événement à détecter (cmd Tuya)
      description: "CSV ex: ipc_bang, ipc_human, ipc_motion. Vide = tout."
      default: ""
      selector:
        text:

    notify_services_csv:
      name: Services de notification (CSV)
      description: >
        Liste CSV de services notify à appeler, ex :
        notify.mobile_app_pixel_6, notify.mobile_app_tablette_salon
        (Android/Companion App)
      selector:
        text:

    notif_title:
      name: Titre
      default: "Alerte caméra"
      selector:
        text:

    notif_message:
      name: Message
      description: >
        Variables :
          - {{ detected_cmd }}
          - {{ trigger_entity }}
          - {{ camera_entity }}
      default: "Événement {{ detected_cmd }} — {{ camera_entity or trigger_entity }}"
      selector:
        text:

    open_live_on_tap:
      name: Ouvrir le direct au tap (Android clickAction)
      default: true
      selector:
        boolean:

    show_live_button:
      name: Bouton "Voir la vidéo"
      default: true
      selector:
        boolean:

    cooldown_seconds:
      name: Cooldown anti-spam (secondes)
      default: 5
      selector:
        number:
          min: 0
          max: 3600
          unit_of_measurement: s
          mode: slider

    snapshot_dir:
      name: Dossier de snapshots
      default: "/media/camera/snapshot"
      selector:
        text:

mode: parallel
max: 10

trigger:
  - platform: state
    entity_id: !input event_entities

variables:
  trigger_entity: "{{ trigger.entity_id }}"

  msg_raw: "{{ state_attr(trigger_entity, 'message') | default('{}') }}"
  msg_json: >
    {% set s = msg_raw | string %}
    {% if s.startswith('{') and s.endswith('}') %}
      {{ s | from_json }}
    {% else %}
      {{ dict() }}
    {% endif %}

  detected_cmd: >
    {{ msg_json.get('cmd')
       or state_attr(trigger_entity, 'cmd')
       or state_attr(trigger_entity, 'type')
       or state_attr(trigger_entity, 'event_type')
       or 'unknown' }}

  wanted_csv: !input event_types
  wanted_list: >
    {% set csv = wanted_csv | default('') | trim %}
    {% if csv == '' %}
      {{ [] }}
    {% else %}
      {{ csv.split(',') | map('trim') | reject('equalto','') | list }}
    {% endif %}
  match_evt: "{{ (wanted_list | length == 0) or (detected_cmd in wanted_list) }}"

  cameras: !input camera_entities
  camera_entity: >
    {% set evt_obj = trigger_entity.split('.')[-1] %}
    {% set found = namespace(val='') %}
    {% for cam in cameras %}
      {% set cam_obj = cam.split('.')[-1] %}
      {% if cam_obj in evt_obj %}
        {% set found.val = cam %}
      {% endif %}
    {% endfor %}
    {{ found.val if found.val else (cameras[0] if cameras|length>0 else '') }}

  ts: "{{ now().strftime('%Y%m%d_%H%M%S') }}"
  snapshot_dir: !input snapshot_dir
  snapshot_path: >
    {{ snapshot_dir ~ '/'
       ~ (camera_entity|replace('.','_') if camera_entity else 'event')
       ~ '_' ~ ts ~ '.jpg' }}
  snapshot_url: "{{ snapshot_path | replace('/media/', '/media/local/') }}"

  cooldown: !input cooldown_seconds
  allow_notify: >
    {% if cooldown | int == 0 %}
      true
    {% elif this.attributes.last_triggered is not defined %}
      true
    {% else %}
      {{ (as_timestamp(now()) - as_timestamp(this.attributes.last_triggered)) >= (cooldown | int) }}
    {% endif %}

  open_live_on_tap: !input open_live_on_tap
  show_live_button: !input show_live_button
  live_target: "{{ 'entityId:' ~ camera_entity if camera_entity else '' }}"

  notify_services: >
    {% set s = ( !input notify_services_csv ) | default('') | trim %}
    {% if s == '' %}
      {{ [] }}
    {% else %}
      {{ s.split(',') | map('trim') | reject('equalto','') | list }}
    {% endif %}

condition:
  - condition: template
    value_template: "{{ match_evt }}"
  - condition: template
    value_template: "{{ allow_notify }}"
  - condition: template
    value_template: "{{ camera_entity != '' }}"
  - condition: template
    value_template: "{{ notify_services | length > 0 }}"

action:
  - service: camera.snapshot
    data:
      entity_id: "{{ camera_entity }}"
      filename: "{{ snapshot_path }}"

  - delay: "00:00:01"

  - repeat:
      for_each: "{{ notify_services }}"
      sequence:
        - choose:
            - conditions: "{{ show_live_button and open_live_on_tap }}"
              sequence:
                - service: "{{ repeat.item }}"
                  data:
                    title: !input notif_title
                    message: !input notif_message
                    data:
                      image: "{{ snapshot_url }}"
                      attachment:
                        url: "{{ snapshot_url }}"
                        content-type: jpeg
                        hide-thumbnail: false
                      clickAction: "{{ live_target }}"
                      actions:
                        - action: URI
                          title: "Voir la vidéo"
                          uri: "{{ live_target }}"

            - conditions: "{{ (not show_live_button) and open_live_on_tap }}"
              sequence:
                - service: "{{ repeat.item }}"
                  data:
                    title: !input notif_title
                    message: !input notif_message
                    data:
                      image: "{{ snapshot_url }}"
                      attachment:
                        url: "{{ snapshot_url }}"
                        content-type: jpeg
                        hide-thumbnail: false
                      clickAction: "{{ live_target }}"

            - conditions: "{{ show_live_button and (not open_live_on_tap) }}"
              sequence:
                - service: "{{ repeat.item }}"
                  data:
                    title: !input notif_title
                    message: !input notif_message
                    data:
                      image: "{{ snapshot_url }}"
                      attachment:
                        url: "{{ snapshot_url }}"
                        content-type: jpeg
                        hide-thumbnail: false
                      actions:
                        - action: URI
                          title: "Voir la vidéo"
                          uri: "{{ live_target }}"
          default:
            - service: "{{ repeat.item }}"
              data:
                title: !input notif_title
                message: !input notif_message
                data:
                  image: "{{ snapshot_url }}"
                  attachment:
                    url: "{{ snapshot_url }}"
                    content-type: jpeg
                    hide-thumbnail: false